// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x", "linux-musl"]
}

model Organization {
  id        String     @id
  name      String
  email     String
  password  String
  customers Customer[]
  employees User[]
}

model User {
  id               String          @id
  name             String
  role             String
  email            String
  password         String
  createdAt        DateTime        @default(now())
  admin            Boolean
  organization     Organization    @relation(fields: [organizationId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  organizationId   String
  customerDemand   CustomerDemand? @relation(fields: [customerDemandId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  customerDemandId String?

  @@index([organizationId])
  @@index([customerDemandId])
}

model Customer {
  id                  String           @id
  name                String
  externalInfoLink    String
  activityField       String
  delayedPosts        Int
  activeCampaigns     Int
  currentOrganization Organization     @relation(fields: [organizationId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  organizationId      String
  customerDemands     CustomerDemand[]

  @@index([organizationId])
}

model CustomerDemand {
  id            String   @id
  name          String
  description   String
  createdAt     DateTime @default(now())
  endLine       DateTime
  designer      String
  copywriter    String
  readyToSend   Boolean
  readyToPost   Boolean
  posted        Boolean
  customer      Customer @relation(fields: [customerId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  customerId    String
  activeWorkers User[]

  @@index([customerId])
}
