datasource db {
  provider = "postgresql"
  url      = "postgresql://pmv:admin@localhost:5432/planner?schema=NAME&Â¨sslmode=prefer"
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["extendedWhereUnique"]
}

model Organization {
  id        String     @id
  name      String
  email     String
  password  String
  createdAt DateTime   @default(now())
  User      User[]
  Customer  Customer[]
}

model User {
  id             String        @id
  name           String
  role           String
  email          String
  password       String
  createdAt      DateTime
  admin          Boolean
  organization   Organization? @relation(fields: [organizationId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  organizationId String?

  @@index([organizationId])
}

model Customer {
  id                  String           @id
  name                String
  externalInfoLink    String
  activityField       String
  activeCampaigns     Int
  currentOrganization Organization     @relation(fields: [organizationId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  organizationId      String
  customerDemands     CustomerDemand[]

  @@index([organizationId])
}

model CustomerDemand {
  id          String    @id
  name        String
  description String
  createdAt   DateTime
  endLine     String
  designer    String
  copywriter  String
  readyToSend Boolean
  readyToPost Boolean
  posted      Boolean
  customer    Customer? @relation(fields: [customerId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  customerId  String

  @@index([customerId])
}
